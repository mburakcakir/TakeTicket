<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="com.mburakcakir.taketicket.data.db.entity.EventModel" />

        <variable
            name="ticket"
            type="com.mburakcakir.taketicket.data.db.entity.TicketModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorDarkBackground"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/height_line_heighter"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--            <androidx.constraintlayout.widget.Guideline-->
            <!--                android:id="@+id/guideline"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical"-->
            <!--                app:layout_constraintGuide_percent="0.15" />-->

            <ImageView
                android:id="@+id/imgTicketLastImage"
                loadImageFromUrl="@{event.url}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/txtTicketCategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtEventTitle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:maxLines="2"
                android:paddingTop="@dimen/margin_min"
                android:text="@{event.title}"
                android:textColor="@color/colorTextFirst"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/txtEventPrice"
                app:layout_constraintStart_toEndOf="@id/imgTicketLastImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/event_subject" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtEventPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_min"
                android:layout_marginEnd="@dimen/margin_medium"
                android:text="@{Integer.toString(event.price) + `$`}"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgDeleteTicket"
                app:layout_constraintEnd_toStartOf="@id/imgDeleteTicket"
                app:layout_constraintTop_toTopOf="@id/imgDeleteTicket"
                tools:text="@string/price" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTicketCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_min"
                android:paddingBottom="@dimen/margin_min"
                android:text="@{event.category}"
                app:layout_constraintStart_toEndOf="@id/imgTicketLastImage"
                app:layout_constraintTop_toBottomOf="@id/txtTicketLastTime"
                tools:text="@string/event_category" />

            <!--            <androidx.constraintlayout.widget.Guideline-->
            <!--                android:id="@+id/guideline3"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical"-->
            <!--                app:layout_constraintGuide_percent="0.70" />-->


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTicketBoughtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_min"
                android:layout_weight="0.20"
                android:gravity="center"
                android:text="@{ticket.boughtTime}"
                app:layout_constraintStart_toEndOf="@id/imgMiddlePoint"
                app:layout_constraintTop_toTopOf="@id/txtTicketCategory"
                tools:text="@string/event_bought_time" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTicketLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_min"
                android:maxLines="2"
                android:text="@{event.time}"
                app:layout_constraintStart_toEndOf="@id/imgTicketLastImage"
                app:layout_constraintTop_toBottomOf="@id/txtEventTitle"
                tools:text="@string/event_day" />

            <ImageView
                android:id="@+id/imgMiddlePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_black"
                app:layout_constraintStart_toEndOf="@id/txtTicketCategory"
                app:layout_constraintTop_toTopOf="@id/txtTicketCategory" />

            <ImageView
                android:id="@+id/imgDeleteTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:background="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>