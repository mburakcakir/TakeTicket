<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="info"
            type="com.mburakcakir.taketicket.data.remote.model.info.InfoModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_big"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgInfoImage"
                android:layout_width="@dimen/size_info_image"
                android:layout_height="@dimen/size_info_image"
                loadImageFromUrlWithFirebase="@{info.imageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_big"
                android:textColor="@color/colorTextFirst"
                android:textStyle="bold"
                android:text="@{info.account}"
                app:layout_constraintBottom_toTopOf="@id/txtInfoLink"
                app:layout_constraintStart_toEndOf="@id/imgInfoImage"
                app:layout_constraintTop_toTopOf="@id/imgInfoImage"
                tools:text="@string/info_site" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtInfoLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_big"
                android:autoLink="web|email"
                android:text="@{info.siteUrl}"
                app:layout_constraintBottom_toBottomOf="@id/imgInfoImage"
                app:layout_constraintStart_toEndOf="@id/imgInfoImage"
                app:layout_constraintTop_toBottomOf="@id/txtInfoTitle"
                tools:text="@string/info_link" />

            <ImageView
                android:id="@+id/imgInfoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:background="@color/colorTextFirst"
            app:layout_constraintStart_toStartOf="@id/viewChild"
            app:layout_constraintTop_toBottomOf="@id/viewChild" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>